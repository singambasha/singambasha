Syntax:
COPY<src><dest>
Example:
COPYapp.py/app/
Syntax:
EXPOSE<port>
Example:
EXPOSE8080
 
 vim Dockerfile
ARG NGINX_VERSION=latest
FROM nginx:${NGINX_VERSION}
ADD index.html /usr/share/nginx/html/index.html
WORKDIR ["nginx","-g","daemon off;"]
EXPOSE 80
LABEL description="krishna"
ENV APP_VERSION=1.0
